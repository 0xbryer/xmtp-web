{
  "name": "@xmtp/react-sdk",
  "description": "XMTP client SDK for React apps written in TypeScript",
  "version": "4.0.0",
  "author": "XMTP Labs <eng@xmtp.com>",
  "license": "MIT",
  "type": "module",
  "browser": "lib/index.js",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "default": "./lib/index.js"
    }
  },
  "files": [
    "lib"
  ],
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "git@github.com:xmtp/xmtp-web.git",
    "directory": "packages/react-sdk"
  },
  "homepage": "https://github.com/xmtp/xmtp-web",
  "bugs": {
    "url": "https://github.com/xmtp/xmtp-web/issues"
  },
  "keywords": [
    "xmtp",
    "messaging",
    "web3",
    "sdk",
    "js",
    "ts",
    "javascript",
    "typescript",
    "react",
    "reactjs",
    "react-hooks",
    "hooks"
  ],
  "publishConfig": {
    "access": "public"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 3 chrome versions",
      "last 3 firefox versions",
      "last 3 safari versions"
    ]
  },
  "scripts": {
    "build": "yarn clean:lib && yarn rollup -c",
    "dev": "yarn clean:lib && yarn rollup -c --watch",
    "clean:lib": "rm -rf lib",
    "clean": "rm -rf .turbo && rm -rf node_modules && yarn clean:lib",
    "lint": "eslint . --ignore-path ../../.gitignore",
    "format:base": "prettier --ignore-path ../../.gitignore",
    "format:check": "yarn format:base -c .",
    "format": "yarn format:base -w .",
    "generate:types": "rollup -c rollup.config.dts.js",
    "test": "vitest run --passWithNoTests",
    "typecheck": "tsc",
    "typedoc": "typedoc"
  },
  "dependencies": {
    "@xmtp/content-type-reaction": "^1.1.3",
    "@xmtp/content-type-remote-attachment": "^1.1.4",
    "@xmtp/content-type-reply": "^1.1.5",
    "@xmtp/xmtp-js": "^11.3.0",
    "async-mutex": "^0.4.0",
    "date-fns": "^3.1.0",
    "dexie": "^3.2.4",
    "dexie-react-hooks": "^1.1.7",
    "react": "^18.2.0",
    "uuid": "^9.0.1",
    "viem": "^1.19.6",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.5",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.2",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^9.0.7",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.1.3",
    "@xmtp/tsconfig": "workspace:*",
    "eslint": "^8.56.0",
    "eslint-config-xmtp-web": "workspace:*",
    "fake-indexeddb": "^5.0.2",
    "happy-dom": "^12.10.3",
    "prettier": "^3.1.1",
    "react-dom": "^18.2.0",
    "rollup": "^4.9.4",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-filesize": "^10.0.0",
    "rollup-plugin-tsconfig-paths": "^1.5.2",
    "typedoc": "^0.25.7",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vite-tsconfig-paths": "^4.2.3",
    "vitest": "^1.1.3"
  },
  "peerDependencies": {
    "@xmtp/xmtp-js": "^11.3.0",
    "react": ">=16.14"
  },
  "engines": {
    "node": ">=18"
  }
}
