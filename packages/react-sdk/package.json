{
  "name": "@xmtp/react-sdk",
  "private": true,
  "version": "0.0.0",
  "license": "MIT",
  "type": "module",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/types/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "build:cjs": "yarn tsc -p tsconfig.cjs.json",
    "build:esm": "yarn tsc -p tsconfig.esm.json",
    "build:types": "yarn tsc -p tsconfig.types.json",
    "build": "yarn clean:lib && yarn build:cjs && yarn build:esm && yarn build:types",
    "copy:css:cjs": "mkdir -p lib/cjs/components/Loaders && cp ./src/components/Loaders/Loader.module.css ./lib/cjs/components/Loaders/Loader.module.css",
    "copy:css:esm": "mkdir -p lib/esm/components/Loaders && cp ./src/components/Loaders/Loader.module.css ./lib/esm/components/Loaders/Loader.module.css",
    "copy:css": "yarn copy:css:cjs && yarn copy:css:esm",
    "dev": "yarn copy:css && concurrently \"yarn build:esm --watch\" \"yarn build:types --watch\" \"yarn storybook\"",
    "clean:lib": "rm -rf lib",
    "clean": "rm -rf .turbo && rm -rf node_modules && yarn clean:lib",
    "lint": "eslint .",
    "format:base": "prettier --ignore-path ../../.gitignore",
    "format:check": "yarn format:base -c .",
    "format": "yarn format:base -w .",
    "generate:types": "yarn build:types",
    "test": "vitest run --passWithNoTests",
    "typecheck": "tsc --noEmit",
    "storybook": "NODE_OPTIONS=--openssl-legacy-provider start-storybook -p 6006",
    "build-storybook": "NODE_OPTIONS=--openssl-legacy-provider build-storybook"
  },
  "dependencies": {
    "@heroicons/react": "^2.0.16",
    "@xmtp/xmtp-js": "^7.14.1",
    "date-fns": "^2.29.3",
    "react": "^18.2.0",
    "react-18-blockies": "^1.0.6"
  },
  "devDependencies": {
    "@babel/core": "^7.21.3",
    "@mdx-js/react": "^1.6.22",
    "@storybook/addon-actions": "^6.5.16",
    "@storybook/addon-docs": "^6.5.16",
    "@storybook/addon-essentials": "^6.5.16",
    "@storybook/addon-interactions": "^6.5.16",
    "@storybook/addon-links": "^6.5.16",
    "@storybook/builder-vite": "^0.4.2",
    "@storybook/react": "^6.5.16",
    "@storybook/testing-library": "^0.0.13",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/line-clamp": "^0.4.2",
    "@testing-library/react": "^14.0.0",
    "@types/react": "^18.0.29",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^3.1.0",
    "@xmtp/tsconfig": "workspace:*",
    "autoprefixer": "^10.4.14",
    "babel-loader": "^8.3.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.36.0",
    "eslint-config-xmtp": "workspace:*",
    "eslint-plugin-storybook": "^0.6.11",
    "jsdom": "^21.1.1",
    "postcss": "^8.4.21",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.2.7",
    "typescript": "^5.0.2",
    "vite": "^4.2.1",
    "vitest": "^0.29.7"
  },
  "peerDependencies": {
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.21",
    "tailwindcss": "^3.2.7"
  }
}
