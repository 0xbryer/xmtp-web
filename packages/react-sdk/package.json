{
  "name": "@xmtp/react-sdk",
  "description": "XMTP client SDK for React apps written in TypeScript",
  "version": "1.0.0-preview.18",
  "license": "MIT",
  "type": "module",
  "main": "lib/index.cjs",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "require": "./lib/index.cjs",
      "import": "./lib/index.js"
    },
    "./style.css": "./lib/index.css"
  },
  "files": [
    "lib"
  ],
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "git@github.com:xmtp/xmtp-web.git",
    "directory": "packages/react-sdk"
  },
  "homepage": "https://github.com/xmtp/xmtp-web",
  "bugs": {
    "url": "https://github.com/xmtp/xmtp-web/issues"
  },
  "keywords": [
    "xmtp",
    "messaging",
    "web3",
    "sdk",
    "js",
    "ts",
    "javascript",
    "typescript",
    "react",
    "reactjs",
    "react-component",
    "react-hooks",
    "hooks"
  ],
  "publishConfig": {
    "access": "public"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 3 chrome versions",
      "last 3 firefox versions",
      "last 3 safari versions"
    ]
  },
  "scripts": {
    "build": "tsup",
    "dev": "concurrently \"tsup --watch\" \"yarn storybook\"",
    "clean:lib": "rm -rf lib",
    "clean": "rm -rf .turbo && rm -rf node_modules && yarn clean:lib",
    "lint": "eslint . --ignore-path ../../.gitignore",
    "format:base": "prettier --ignore-path ../../.gitignore",
    "format:check": "yarn format:base -c .",
    "format": "yarn format:base -w .",
    "generate:types": "tsup --dts-only",
    "test": "vitest run --passWithNoTests",
    "typecheck": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@heroicons/react": "^2.0.16",
    "@xmtp/xmtp-js": "^8.0.1",
    "date-fns": "^2.29.3",
    "react": "^18.2.0",
    "react-18-blockies": "^1.0.6"
  },
  "devDependencies": {
    "@babel/core": "^7.21.3",
    "@mdx-js/react": "^1.6.22",
    "@storybook/addon-essentials": "^7.0.0",
    "@storybook/addon-interactions": "^7.0.0",
    "@storybook/addon-links": "^7.0.0",
    "@storybook/blocks": "^7.0.0",
    "@storybook/react": "^7.0.0",
    "@storybook/react-vite": "^7.0.0",
    "@storybook/testing-library": "^0.0.14-next.2",
    "@testing-library/react": "^14.0.0",
    "@types/react": "^18.0.29",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^3.1.0",
    "@xmtp/tsconfig": "workspace:*",
    "concurrently": "^7.6.0",
    "eslint": "^8.36.0",
    "eslint-config-xmtp-web": "workspace:*",
    "eslint-plugin-storybook": "^0.6.11",
    "jsdom": "^21.1.1",
    "postcss": "^8.4.21",
    "postcss-modules": "^6.0.0",
    "postcss-preset-env": "^8.3.1",
    "prop-types": "^15.8.1",
    "react-dom": "^18.2.0",
    "storybook": "^7.0.0",
    "tsup": "^6.7.0",
    "typescript": "^5.0.2",
    "vite": "^4.2.1",
    "vitest": "^0.29.7"
  },
  "peerDependencies": {
    "@xmtp/xmtp-js": "^8.0.1",
    "react": ">=16.14"
  }
}
