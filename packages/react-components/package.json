{
  "name": "@xmtp/react-components",
  "description": "React components for use with the XMTP React SDK",
  "version": "1.0.0-preview.0",
  "license": "MIT",
  "type": "module",
  "main": "lib/index.cjs",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js",
      "require": "./lib/index.cjs"
    },
    "./styles.css": "./lib/index.css"
  },
  "files": [
    "lib"
  ],
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "git@github.com:xmtp/xmtp-web.git",
    "directory": "packages/react-components"
  },
  "homepage": "https://github.com/xmtp/xmtp-web",
  "bugs": {
    "url": "https://github.com/xmtp/xmtp-web/issues"
  },
  "keywords": [
    "xmtp",
    "messaging",
    "web3",
    "sdk",
    "js",
    "ts",
    "javascript",
    "typescript",
    "react",
    "reactjs",
    "react-component"
  ],
  "publishConfig": {
    "access": "public"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 3 chrome versions",
      "last 3 firefox versions",
      "last 3 safari versions"
    ]
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean:lib": "rm -rf lib",
    "clean": "rm -rf .turbo && rm -rf node_modules && yarn clean:lib",
    "lint": "eslint . --ignore-path ../../.gitignore",
    "format:base": "prettier --ignore-path ../../.gitignore",
    "format:check": "yarn format:base -c .",
    "format": "yarn format:base -w .",
    "generate:types": "tsup --dts-only",
    "test": "vitest run --passWithNoTests",
    "typecheck": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@heroicons/react": "^2.0.18",
    "@xmtp/xmtp-js": "^9.0.1",
    "date-fns": "^2.30.0",
    "react": "^18.2.0",
    "react-18-blockies": "^1.0.6"
  },
  "devDependencies": {
    "@babel/core": "^7.21.8",
    "@mdx-js/react": "^1.6.22",
    "@storybook/addon-essentials": "^7.0.10",
    "@storybook/addon-interactions": "^7.0.10",
    "@storybook/addon-links": "^7.0.10",
    "@storybook/blocks": "^7.0.10",
    "@storybook/react": "^7.0.10",
    "@storybook/react-vite": "^7.0.10",
    "@storybook/testing-library": "^0.1.0",
    "@testing-library/react": "^14.0.0",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "@vitejs/plugin-react": "^4.0.0",
    "@xmtp/tsconfig": "workspace:*",
    "eslint": "^8.40.0",
    "eslint-config-xmtp-web": "workspace:*",
    "eslint-plugin-storybook": "^0.6.12",
    "jsdom": "^21.1.2",
    "postcss": "^8.4.23",
    "postcss-modules": "^6.0.0",
    "postcss-preset-env": "^8.3.2",
    "prettier": "^2.8.8",
    "prop-types": "^15.8.1",
    "react-dom": "^18.2.0",
    "storybook": "^7.0.10",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4",
    "vite": "^4.3.5",
    "vitest": "^0.31.0"
  },
  "peerDependencies": {
    "@xmtp/xmtp-js": "^9.0.1",
    "react": ">=16.14"
  }
}
