{
  "name": "@xmtp/react-components",
  "description": "React components for use with the XMTP React SDK",
  "version": "1.0.0-preview.0",
  "license": "MIT",
  "type": "module",
  "main": "lib/index.cjs",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js",
      "require": "./lib/index.cjs"
    },
    "./styles.css": "./lib/index.css"
  },
  "files": [
    "lib"
  ],
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "git@github.com:xmtp/xmtp-web.git",
    "directory": "packages/react-components"
  },
  "homepage": "https://github.com/xmtp/xmtp-web",
  "bugs": {
    "url": "https://github.com/xmtp/xmtp-web/issues"
  },
  "keywords": [
    "xmtp",
    "messaging",
    "web3",
    "sdk",
    "js",
    "ts",
    "javascript",
    "typescript",
    "react",
    "reactjs",
    "react-component"
  ],
  "publishConfig": {
    "access": "public"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 3 chrome versions",
      "last 3 firefox versions",
      "last 3 safari versions"
    ]
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean:lib": "rm -rf lib",
    "clean": "rm -rf .turbo && rm -rf node_modules && yarn clean:lib",
    "lint": "eslint . --ignore-path ../../.gitignore",
    "format:base": "prettier --ignore-path ../../.gitignore",
    "format:check": "yarn format:base -c .",
    "format": "yarn format:base -w .",
    "generate:types": "tsup --dts-only",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@heroicons/react": "^2.0.18",
    "@xmtp/content-type-reaction": "^1.1.3",
    "@xmtp/content-type-remote-attachment": "^1.1.4",
    "@xmtp/content-type-reply": "^1.1.5",
    "@xmtp/react-sdk": "workspace:*",
    "date-fns": "^2.30.0",
    "react": "^18.2.0",
    "react-18-blockies": "^1.0.6"
  },
  "devDependencies": {
    "@testing-library/react": "^14.1.2",
    "@types/react": "^18.2.38",
    "@types/react-dom": "^18.2.16",
    "@vitejs/plugin-react": "^4.2.0",
    "@xmtp/tsconfig": "workspace:*",
    "eslint": "^8.54.0",
    "eslint-config-xmtp-web": "workspace:*",
    "postcss": "^8.4.31",
    "postcss-modules": "^6.0.0",
    "postcss-preset-env": "^9.3.0",
    "prettier": "^3.1.0",
    "prop-types": "^15.8.1",
    "react-dom": "^18.2.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.2",
    "vite": "^4.5.0"
  },
  "peerDependencies": {
    "react": ">=16.14"
  },
  "engines": {
    "node": ">=18"
  }
}
